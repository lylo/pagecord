<div class="mb-6">
  <div class="flex space-x-4 border-b border-slate-300 dark:border-slate-700">
    <%= link_to "Content Moderation",
        admin_moderation_index_path(tab: "content"),
        class: "px-4 py-2 -mb-px #{@tab == 'content' ? 'border-b-2 border-[#4fbd9c] text-[#4fbd9c] font-medium' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300'}" %>
    <%= link_to "Spam Detection",
        admin_moderation_index_path(tab: "spam"),
        class: "px-4 py-2 -mb-px #{@tab == 'spam' ? 'border-b-2 border-[#4fbd9c] text-[#4fbd9c] font-medium' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300'}" %>
  </div>
</div>

<% if @tab == "content" %>
  <%= render "content_moderation_table" %>
<% else %>
  <%= render "spam_detection_table" %>
<% end %>
