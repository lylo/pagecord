<div class="max-w-2xl mx-auto">
  <h2 class="text-2xl font-bold py-8">Create New User</h2>

  <%= form_with(model: [:admin, @user], class: "max-w-lg") do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-100 dark:bg-red-900 p-4 rounded mb-6">
        <h2 class="font-semibold text-red-700 dark:text-red-300 mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul class="list-disc pl-5 space-y-1 text-red-600 dark:text-red-200">
          <% @user.errors.messages.each do |attribute, messages| %>
            <% messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.fields_for :blog do |blog_form| %>
        <%= blog_form.label :subdomain, "Subdomain", class: "block text-sm font-medium mb-1" %>
        <div class="flex items-center">
          <%= blog_form.text_field :subdomain, placeholder: "subdomain", autofocus: true, class: "w-full placeholder-slate-300 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg focus:outline-none focus:ring-0 focus:border-slate-500 dark:focus:border-slate-400", maxlength: 20, required: true %>
        </div>
        <div class="text-slate-500 text-xs mt-1">
          Subdomain can only contain letters and numbers
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "block text-sm font-medium mb-1" %>
      <%= form.email_field :email, class: "w-full placeholder-slate-300 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg focus:outline-none focus:ring-0 focus:border-slate-500 dark:focus:border-slate-400", placeholder: "you@example.com", required: true %>
    </div>

    <div class="flex items-center gap-x-2 mt-6">
      <%= form.submit "Create User", class: "btn-primary cursor-pointer" %>
      <%= link_to "Cancel", admin_blogs_path, class: "btn-secondary" %>
    </div>
  <% end %>
</div>