<div class="mx-auto text-left max-w-5xl w-full text-slate-950 dark:text-slate-50">
  <h2 class="text-2xl font-bold py-4">Latest Posts</h2>

  <div class="overflow-auto">
    <table class="my-8 min-w-full divide-y divide-gray-300 dark:divide-gray-700">
      <thead>
        <tr>
          <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-gray-900 dark:text-slate-50">Username</th>
          <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-gray-900 dark:text-slate-50">Posts</th>
          <th class="py-4 sm:ps-4 text-end text-sm font-semibold text-gray-900 dark:text-slate-50">Created</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-300 dark:divide-gray-700">
      <% @posts.each do |post| %>
        <tr>
          <td class="whitespace-nowrap py-4 pe-4 sm:ps-4 text-sm font-medium text-gray-900 dark:text-slate-50">
            <%= link_to "@#{post.user.username}", user_posts_path(username: post.user.username), class: "hover:underline" %>
          </td>
          <td class="whitespace-wrap py-4 pe-4 sm:ps-4 text-sm text-gray-900 dark:text-slate-50">
            <%= link_to post_title(post), post_path(post), class: "hover:underline" %>
          </td>
          <td class="whitespace-nowrap py-4 sm:ps-4 text-sm text-gray-500 dark:text-gray-400 text-end"><%= post.created_at.to_formatted_s :long %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="flex justify-end admin">
    <%== pagy_nav(@pagy) %>
  </div>
</div>
