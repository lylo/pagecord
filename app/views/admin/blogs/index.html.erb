<div class="mb-6 flex flex-col sm:flex-row sm:justify-between items-start sm:items-center gap-4">
  <div class="flex flex-wrap items-center gap-x-1 gap-y-2">
    <span><%= link_to "#{pluralize(number_with_delimiter(@total_users), "account")} in total", admin_blogs_path, class: "underline font-medium" %>.</span>
    <span><%= link_to pluralize(number_with_delimiter(Subscription.active_paid.count), "paid subscription"), admin_blogs_path(status: "paid"), class: "underline font-medium" %>,</span>
    <span><%= link_to "#{number_with_delimiter(Subscription.comped.count)} comped", admin_blogs_path(status: "comped"), class: "underline font-medium" %>.</span>
  </div>

<%= link_to new_admin_user_path, class: "btn-primary text-sm whitespace-nowrap" do %>
    <%= inline_svg_tag "icons/plus.svg", class: "w-4 h-4 mr-1 inline-block" %>
    Create New User
  <% end %>
</div>

<%= form_with url: admin_blogs_path, method: :get, data: { turbo_frame: "stats-content", controller: "search", search_target: "form" }, local: true, class: "mb-4" do |form| %>
  <div class="max-w-md">
    <div class="relative">
      <%= form.text_field :search, placeholder: "Search by subdomain or email...", value: params[:search],
          class: "w-full px-3 py-2 pr-10 border border-slate-300 dark:border-slate-600 rounded-md text-sm bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 placeholder-slate-500 dark:placeholder-slate-400 focus:outline-none focus:ring-0 focus:border-slate-500 dark:focus:border-slate-400",
          data: { action: "input->search#search keydown->search#handleKeydown", search_target: "input" },
          autofocus: true %>
<button type="button" data-action="click->search#toggle" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 transition-colors" title="Clear search">
        <%= inline_svg_tag "icons/close.svg", class: "w-4 h-4" %>
      </button>
    </div>
    <%= form.hidden_field :status, value: params[:status] %>
  </div>
<% end %>

<%= turbo_frame_tag "stats-content" do %>
  <% if params[:search].present? || params[:status].present? %>
    <div class="mb-4 text-sm text-slate-600 dark:text-slate-400">
      <% if params[:search].present? && params[:status].present? %>
        <% status_label = case params[:status]
             when "paid" then "paid subscribers"
             when "comped" then "comped users"
           end %>
        <% if @pagy.count == 0 %>
          No <%= status_label %> found for "<strong><%= params[:search] %></strong>"
        <% else %>
          <%= pluralize @pagy.count, "result" %> found in <%= status_label %> for "<strong><%= params[:search] %></strong>"
        <% end %>
      <% elsif params[:search].present? %>
        <% if @pagy.count == 0 %>
          No results found for "<strong><%= params[:search] %></strong>"
        <% else %>
          <%= pluralize @pagy.count, "result" %> found for "<strong><%= params[:search] %></strong>"
        <% end %>
      <% elsif params[:status].present? %>
        <% status_label = case params[:status]
             when "paid" then "Showing paid subscribers"
             when "comped" then "Showing comped users"
           end %>
        <strong><%= status_label %></strong> (<%= pluralize @pagy.count, "result" %>)
      <% end %>
      <%= link_to "Clear filters", admin_blogs_path, class: "ml-2 btn-secondary underline text-sm" %>
    </div>
  <% end %>
<div class="overflow-auto">
  <table class="my-8 min-w-full divide-y divide-slate-300 dark:divide-slate-700">
    <thead>
      <tr>
        <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-slate-900 dark:text-slate-50">Account</th>
        <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-slate-900 dark:text-slate-50">Blogs</th>
        <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-slate-900 dark:text-slate-50">Verified</th>
        <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-slate-900 dark:text-slate-50">Status</th>
        <th class="py-4 pe-4 sm:ps-4 text-left text-sm font-semibold text-slate-900 dark:text-slate-50">Marketing</th>
        <th class="py-4 sm:ps-4 text-end text-sm font-semibold text-slate-900 dark:text-slate-50">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-300 dark:divide-slate-700">
    <% @users.each do |user| %>
      <tr>
        <td class="whitespace-nowrap py-4 pe-4 sm:ps-4 text-sm font-medium text-slate-900 dark:text-slate-50">
          <div class="flex flex-col gap-y-1">
            <%= link_to user.email, admin_user_path(user), data: { turbo_frame: "_top" } %>
          </div>
        </td>
        <td class="py-4 pe-4 sm:ps-4 text-sm text-slate-500 dark:text-slate-400">
          <div class="flex flex-col gap-y-1">
            <% user.blogs.each do |blog| %>
              <div class="flex items-center gap-x-2">
                <%= link_to blog.subdomain, blog_home_url(blog), class: "hover:underline", target: "_blank" %>
                <span class="text-xs text-slate-400"><%= pluralize(blog.posts.count, "post") %></span>
              </div>
            <% end %>
          </div>
        </td>
        <td class="whitespace-nowrap py-4 pe-4 sm:ps-4 text-sm text-slate-500 dark:text-slate-400"><%= user.verified %></td>
        <td class="whitespace-nowrap py-4 pe-4 sm:ps-4 text-sm text-slate-500 dark:text-slate-400">
          <% if user.discarded_at %>
            Cancelled
          <% elsif user.subscribed? %>
            <% if user.subscription.complimentary? %>
              Comped
            <% else %>
              Premium
            <% end %>
          <% else %>
            Free
            <% if user.subscribed? && user.lapsed? %>
             (Lapsed)
            <% end %>
          <% end %>
        </td>
        <td class="whitespace-nowrap py-4 sm:ps-4 text-sm text-slate-500 dark:text-slate-400 text-center">
          <% if user.marketing_consent? %>
            âœ…
          <% end %>
        </td>
        <td class="whitespace-nowrap py-4 sm:ps-4 text-sm text-slate-500 dark:text-slate-400 text-end"><%= user.created_at.to_formatted_s :long %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= render "app/shared/pagy_nav" %>
<% end %>
