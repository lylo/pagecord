<div class="mx-auto max-w-2xl w-full text-slate-950 dark:text-slate-50">
  <%= render "app/shared/heading" %>
  <%= render "app/shared/nav" %>

  <%= render "app/shared/callout" do %>
    <%= render "app/shared/how_to" %>
  <% end %>

  <%= render "app/shared/bio" %>

  <div>
    <h3 class="font-bold text-lg mt-4 mb-2">Danger Zone</h3>

    <p>
      You can delete your account by clicking the button below. Sorry to see you go!
    </p>

    <%= button_to app_user_path(Current.user),
          method: :delete,
          data: { turbo_confirm: "Are you absolutely sure? Your account will be incinerated!" },
          class: "mt-4 dark:text-slate-300 bg-slate-100 dark:bg-slate-800 hover:text-white hover:bg-red-600 hover:dark:bg-red-700 rounded-lg border hover:border-red-700 hover:dark:border-red-800 dark:border-slate-700 p-2" do %>

      Delete account
    <% end %>
  </div>
</div>
