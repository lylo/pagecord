<% is_new = !@page.persisted? %>

<div data-controller="post-attributes autosave"
    data-autosave-key-value="<%= is_new ? "draft-page-new" : "draft-page-#{@page.id}" %>">

  <div class="mb-4"><%= trial_callout("Image uploads") %></div>

  <div class="flex justify-end mb-4" data-controller="toggle">
    <%= link_to "#", class: "ms-3 font-medium text-slate-500 hover:text-black dark:text-slate-300 dark:hover:text-slate-50", data: { action: "click->toggle#toggle click@window->toggle#hide" } do %>
        <div class="">
          <%= inline_svg_tag "icons/ellipsis-horizontal-circle.svg", class: "w-7 h-7" %>
        </div>
      <% end %>

      <div class="relative hidden" data-toggle-target="element">
        <div class="absolute top-7 end-0 z-100 w-56 rounded-md border border-gray-100 dark:border-gray-600 bg-white dark:bg-gray-700 shadow-lg" role="menu">
          <div class="py-2 px-1">
            <div class="p-1">
              <%= link_to "#", class: "flex rounded-lg px-2 py-1 text-sm text-gray-500 dark:text-gray-300 hover:bg-gray-50 hover:text-gray-700 dark:hover:bg-gray-600 dark:hover:text-gray-50",
                data: { action: "click->post-attributes#showSection", toggle_target: "slug" } do %>
                <span class="ms-1">Edit URL</span>
              <% end %>
            </div>

            <% if @page.persisted? %>
              <hr class="mx-2 mt-2 dark:border-gray-600">

              <div class="flex p-1">
                <%= button_to app_page_path(@page), method: :delete, data: {turbo_confirm: "Are you sure you want to delete this page?"}, title: "Trash this page", class: "flex w-full rounded-lg px-2 py-2 text-sm text-gray-500 dark:text-gray-300 hover:bg-gray-50 hover:text-gray-700 dark:hover:bg-gray-600 dark:hover:text-gray-50", form_class: "w-full" do %>
                  <%= inline_svg_tag "icons/trash.svg", class: "w-5 h-5" %>
                  <span class="ms-1">Delete page</span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>

  <%= form_with(model: @page, url: @page.persisted? ? app_page_path(@page) : app_pages_path, html: { id: "page-form" }) do |form| %>

    <div class="<%= 'hidden' unless @page.errors[:slug].any? %> mb-8" data-post-attributes-target="section" data-section="slug">
      <div class="mt-4 font-bold">
      <%= form.label :slug, "Slug" %>
      </div>

      <fieldset class="mt-2">
        <%= form.text_field :slug,
            class: "w-full placeholder-slate-300 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg",
            placeholder: "custom-url-path" %>
        <div class="field-error"><%= @page.errors[:slug].to_sentence if @page.errors[:slug].any? %></div>
      </fieldset>
    </div>

    <fieldset>
      <%= form.text_field :title,
            placeholder: "Page title",
            class: "w-full placeholder-slate-300 dark:placeholder-slate-600 dark:bg-slate-900 border border-slate-300 dark:border-slate-600 text-slate-800 dark:text-slate-200 rounded-lg focus:outline-none focus:ring-0 focus:border-slate-500 dark:focus:border-slate-400",
            autofocus: true,
            data: { autosave_target: "title" }
      %>
      <div class="field-error"><%= @page.errors[:title].to_sentence if @page.errors[:title].any? %></div>
    </fieldset>

    <fieldset>
      <%= form.lexxy_rich_text_area :content,
        placeholder: "Write your page content...",
        class: "lexxy-content mt-4 focus:ring-0 focus:!border-slate-500 dark:focus:!border-slate-400",
        spellcheck: true,
        autocorrect: "on",
        data: { controller: "lexxy", attachments: Current.user.has_premium_access?, autosave_target: "content" } %>

      <div class="field-error"><%= @page.errors[:content].first if @page.errors[:content].any? %></div>
    </fieldset>

    <% show_make_home_page = !@blog.has_custom_home_page? && @page.persisted? %>
    <% flex_class = show_make_home_page ? "flex-col" : "justify-between" %>
    <div class="flex <%= flex_class %> sm:flex-row sm:items-center sm:justify-between gap-3 mt-8">
      <div class="flex flex-wrap gap-2">
        <%= form.submit publish_button_text(@page), class: "btn-primary" %>
        <%= link_to "Cancel", app_pages_path, class: "btn-secondary" %>
      </div>
      <div class="flex flex-wrap gap-2">
        <%= form.button draft_button_text(@page), value: "save_draft", class: "btn-optional" %>
        <% if show_make_home_page %>
          <%= link_to "Make Home Page", set_as_home_page_app_page_path(@page.token), data: { turbo_method: :post }, class: "btn-optional" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
