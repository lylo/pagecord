<% if post.tag_list.present? %>
  <%= render "tags", post: post %>
<% end %>

<footer>
  <%= link_to post_path(post), class: "post-date", data: { turbo_frame: "_top" } do %>
    <%= local_time post.published_at, format: published_at_date_format %>
  <% end %>

  <% if @user.subscribed? %>
    <div class="post-actions">
      <% if @user.blog.reply_by_email %>
        <%= link_to new_post_reply_path(post),
                  title: "Reply to this post via email",
                  data: { turbo_frame: "_top" },
                  rel: "nofollow",
                  class: "reply-by-email" do %>
          <%= inline_svg_tag "icons/reply.svg", class: "icon" %>
        <% end %>
      <% end %>

      <% if @user.blog.show_upvotes? %>
        <%= turbo_frame_tag dom_id(post, :upvotes) do %>
          <%= render "upvotes", post: post %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</footer>
