<%= turbo_frame_tag dom_id(post, :upvotes) do %>
  <%= link_to post_upvotes_path(post),
              class: "upvote",
              data: { turbo_method: :post, controller: "upvote", action: "click->upvote#pulse", upvoted: local_assigns[:upvoted] || nil },
              title: "Click to like this post" do %>
    <%= inline_svg_tag "icons/heart.svg",
          class: "icon cursor-pointer upvote-heart",
          data: { upvote_target: "heart" } %>
  <% end %>
<% end %>

