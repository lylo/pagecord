<figure class="attachment attachment--<%= blob.representable? ? "preview" : "file" %> attachment--<%= blob.filename.extension %>">
  <% if blob.representable? %>
    <% if blob.content_type == "image/gif" %>
      <%= image_tag rails_public_blob_url(blob) %>
    <% else %>
      <%= image_tag rails_public_blob_url(blob.representation(resize_to_limit: local_assigns[:in_gallery] ? [ 800, 600 ] : [ 1024, 768 ])) %>
    <% end %>
  <% end %>
</figure>
