<article class="mb-16 prose dark:prose-invert overflow-auto break-words">
  <% if post.title.present? %>
    <%= link_to post_path(post), class: "no-underline" do %>
      <h2 class="mt-0 mb-4">
        <%= post.title %>
      </h2>
    <% end %>
  <% end %>

  <% if post.html? %>
    <%= auto_link post.body.to_s %>
  <% else %>
    <%= simple_format(auto_link post.body.to_s) %>
  <% end %>

  <%= link_to post_path(post), class: "no-underline" do %>
    <div class="text-gray-400 text-sm mt-4 mb-4 font-normal" title="<%= post.updated_at.to_formatted_s(:long) %>">
      <%= post.updated_at.to_date.to_formatted_s(:long) %>
    </div>
  <% end %>
</article>