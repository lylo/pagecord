<svg xmlns="http://www.w3.org/2000/svg" width="1200" height="630" viewBox="0 0 1200 630">
  <defs>
    <clipPath id="circle-clip">
      <circle cx="<%= layout[:favicon_center_x] %>" cy="<%= layout[:favicon_center_y] %>" r="48"/>
    </clipPath>
  </defs>

  <!-- Themed background -->
  <rect width="100%" height="100%" fill="<%= theme_colors[:bg] %>"/>

  <% if favicon_data_uri.present? %>
    <!-- Favicon -->
    <image href="<%= favicon_data_uri %>"
           x="<%= layout[:padding] %>"
           y="<%= layout[:favicon_y] %>"
           height="<%= layout[:favicon_size] %>"
           width="<%= layout[:favicon_size] %>"
           clip-path="url(#circle-clip)" />
  <% end %>

  <!-- Title -->
  <% title_lines.each_with_index do |line, i| %>
    <text x="<%= layout[:padding] %>"
          y="<%= layout[:title_y] + (i * layout[:title_line_height]) %>"
          font-size="72"
          font-weight="700"
          font-family="<%= font_family %>"
          fill="<%= theme_colors[:text] %>"
          letter-spacing="-0.02em">
      <%= h(line) %>
    </text>
  <% end %>

  <!-- Blog name -->
  <text x="<%= layout[:padding] %>"
        y="<%= layout[:blog_name_y] %>"
        font-size="56"
        font-weight="500"
        font-family="<%= font_family %>"
        fill="<%= theme_colors[:accent] %>">
    <%= h(blog.display_name) %>
  </text>
</svg>
